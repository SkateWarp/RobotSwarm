<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="transportable_object">
  <link name="object_link">
    <visual>
      <geometry>
        <box size="0.3 0.4 0.15"/>  <!-- Small box that can be pushed by turtlebots -->
      </geometry>
      <material name="object_blue">
        <color rgba="0.3 0.3 1.0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.4 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <!-- Light enough for turtlebots to push -->
      <mass value="0.5"/>
      <!-- Inertia for a box with mass 0.5 and dimensions 0.3 x 0.4 x 0.15 -->
      <inertia 
        ixx="0.00354" ixy="0.0" ixz="0.0" 
        iyy="0.00229" iyz="0.0" 
        izz="0.00521"/>
    </inertial>
  </link>
  
  <!-- Add physics properties -->
  <gazebo reference="object_link">
    <material>Gazebo/Blue</material>
    <mu1>0.1</mu1>  <!-- Low friction coefficient -->
    <mu2>0.1</mu2>
    <kp>1000.0</kp>  <!-- Contact stiffness -->
    <kd>100.0</kd>   <!-- Contact damping -->
    <maxContacts>20</maxContacts>
    <minDepth>0.001</minDepth>
  </gazebo>
</robot>